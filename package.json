{
  "name": "moviedb-backend",
  "version": "1.0.0",
  "description": "Backend for MovieDB",
  "main": "src/index.ts",
  "scripts": {
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:clean": "rm -r dist; exit 0",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "dev": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules ./src/server/start.ts",
    "lint": "eslint . src --ext .ts",
    "start:moviedb:backend": "NODE_ENV=production node dist/src/server/start",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "NODE_ENV=test jest",
    "test:features": "npm run test:moviedb:backend:features",
    "test:moviedb:backend:features": "NODE_ENV=test cucumber-js -p moviedb_backend",
    "tmdb:all": "npm run tmdb:status && npm run tmdb:genres",
    "tmdb:status": "npm run build && node -e 'require(\"./dist/src/scripts/themoviedatabase/themoviedatabase.script.js\").status()'",
    "tmdb:genres": "node -e 'require(\"./dist/src/scripts/themoviedatabase/themoviedatabase.script.js\").run(\"genres\")'"
  },
  "author": "Cristian SÃ¡nchez",
  "license": "ISC",
  "dependencies": {
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/node": "^17.0.16",
    "@types/uuid": "^8.3.4",
    "@types/uuid-validate": "^0.0.1",
    "axios": "^0.26.0",
    "convict": "^6.2.1",
    "copy": "^0.3.2",
    "dotenv-flow": "^3.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.2",
    "express-promise-router": "^4.1.1",
    "glob": "^7.2.0",
    "http-status": "^1.5.0",
    "mongoose": "^6.2.2",
    "node-dependency-injection": "^2.7.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2",
    "uuid-validate": "^0.0.3",
    "winston": "^3.5.1"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@faker-js/faker": "^6.0.0-alpha.6",
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "swagger-ui-express": "^4.3.0",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8"
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
